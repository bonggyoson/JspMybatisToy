<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
  <!-- 기본 레이아웃 설정 -->
  <definition name="main_layout" template="/WEB-INF/views/tiles/default.jsp">
    <put-attribute name="header" value="/WEB-INF/views/tiles/layouts/header.jsp"/>
    <put-attribute name="footer" value="/WEB-INF/views/tiles/layouts/footer.jsp"/>
  </definition>

  <definition name="*" extends="main_layout">
    <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"/>
  </definition>

  <definition name="*/*" extends="main_layout">
    <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
  </definition>
</tiles-definitions>